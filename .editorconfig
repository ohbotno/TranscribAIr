# EditorConfig for TranscribAIr
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bat}]
indent_style = space
indent_size = 2

# TOML files (pyproject.toml, etc.)
[*.toml]
indent_style = space
indent_size = 2

# Inno Setup scripts
[*.iss]
indent_style = space
indent_size = 2

# Spec files
[*.spec]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Git config files
[.gitignore]
indent_style = space
indent_size = 2
